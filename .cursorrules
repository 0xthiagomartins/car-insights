{
    "python": {
        "formatter": "black",
        "lineLength": 88,
        "linter": "pylint",
        "importOrder": ["stdlib", "thirdparty", "firstparty"],
        "organizeImports": true
    },
    "editor": {
        "formatOnSave": true,
        "tabSize": 4,
        "insertSpaces": true,
        "rulers": [88],
        "wordWrap": "off",
        "trimTrailingWhitespace": true,
        "insertFinalNewline": true
    },
    "files": {
        "exclude": [
            "**/.git",
            "**/__pycache__",
            "**/.pytest_cache",
            "**/venv",
            "**/.env",
            "**/node_modules"
        ]
    },
    "search": {
        "exclude": [
            "**/venv",
            "**/__pycache__",
            "**/.git",
            "**/node_modules"
        ]
    },
    "terminal": {
        "defaultProfile": "powershell"
    }
}
